{
  "extends": "@repo/typescript-config/bun.json",
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@application/*": ["./src/*"],
      "@domain/*": ["../domain/src/*"]
