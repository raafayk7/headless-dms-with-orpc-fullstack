{
  "extends": "@repo/typescript-config/react.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "erasableSyntaxOnly": false,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./src/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@styled/*": ["./styled/*"],
      "@shadow-panda/styled-system/*": ["./styled/*"],

      // Other packages
      "@contract/*": ["../../packages/contract/src/*"]
    }
  },
  "include": ["src", "panda.config.ts", "styled"],
  "exclude": ["node_modules", ".git"]
}
